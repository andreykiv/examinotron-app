<%- include("./partials/head.ejs") %>  

<%- include("./partials/nav.ejs") %>   
<main>
    <h2>Add a new Quiz:</h2>
    <form class="createForm" action="/api/quizs" method="POST">
        <label for="question">Question:</label>
        <input type="text" id="question" name="question">
        <label for="answer1">Answer 1</label>
        <input type="text" id="answer1" name="answer1">
        <label for="answer2">Answer 2</label>
        <input type="text" id="answer2" name="answer2">
        <label for="answer3">Answer 3</label>
        <input type="text" id="answer3" name="answer3">
        <label for="answer4">Answer 4</label>
        <input type="text" id="answer4" name="answer4">
        <label for="correctAnswer">Correct Answer</label>
        <input type="number" id="correctAnswer" name="correctAnswer" min="1" max="4">
        <button type="submit">Submit</button>
    </form>
</main>
