<%- include("./partials/head.ejs") %>

    <%- include("./partials/nav.ejs") %>
    <main>
        <h1>Welcome to the main page!</h1><br>
        <h2>Quizzes that are available rigth now:</h2>
        <div class="listQuizzes">
        <% quizs.forEach((quiz) => { %>
            <div class="quizContainer">
                <div>
                    <strong><p><%= quiz.question %> </p></strong>
                    <p>1. <%= quiz.answer1 %> </p>
                    <p>2. <%= quiz.answer2 %> </p>
                    <p>3. <%= quiz.answer3 %> </p>
                    <p>4. <%= quiz.answer4 %> </p>
                </div>
               <a href="api/quizs/<%=quiz._id%>"><button id= "anchorTagButton">Edit</button></a>
            </div>

         <% }) %>
        </div>

        
     </main>
  

